  margin 0
  padding-left 0
  a
    color $color-19
    &:hover
      text-decoration underline
    &:active
      opacity 0.5

.footer-category-item
  padding 0 30px

.footer-category-item:first-child
  padding-left 0

.footer-category-item:last-child
  padding-right 0

.footer-bottom-row
  background-color $color-02
  font-size 16px

.footer-bottom-row
  .container
    padding 35px 10px 30px
  p
    color $color-01
  a
    color $color-19
    &:hover
      text-decoration underline
    &:active
      color $color-04

.footer-rights, .socials
  display inline-flex

.feedback, .developed
  margin 0
  display inline-flex
  flex-direction column

.footer-rights
  width 228px
  margin-right 161px

.socials
  margin-right 116px

.feedback
  width 135px
  margin-right 53px

.developed
  width 96px

.vk
  background url('../img/icon-vk.svg') no-repeat center
