$color-01 = #fff
$color-02 = #293449
$color-03 = #f3f7f9
$color-04 = #ee3643
$color-05 = rgba(0, 0, 0, 0.24)
$color-06 = #32425c
$color-07 = #000
$color-08 = #ca2c37
$color-09 = #32425c
$color-10 = #ffbf47
$color-11 = #3bbce3
$color-12 = #dc91d8
$color-13 = #8ed78f
$color-14 = #ffc047
$color-15 = #f9f5f0
$color-16 = #a9a9a9

@font-face
  font-family "Cuprum"
  src url('../fonts/Cuprum/Cuprum-Regular.ttf') format(TrueType)
  font-style normal
  font-weight 400

@font-face
  font-family "Cuprum-Italic"
  src url('../fonts/Cuprum/Cuprum-Italic.ttf') format(TrueType)
  font-style normal
  font-weight 400

@font-face
  font-family "Cuprum-Bold"
  src url('../fonts/Cuprum/Cuprum-Bold.ttf') format(TrueType)
  font-style normal
  font-weight 700

@font-face
  font-family "PT-sans-Bold"
  src url('../fonts/PTSans/PTS75F.ttf') format(TrueType)
  font-style normal
  font-weight 700

.page
  margin 0 auto
  width 1200px
  height 4252px
  background $color-01

  .page-header
    width 1200px
    height 320px
    background-color $color-03

    .container
      width 940px
      height 260px

      .top-row
        width 1200px
        height 42px
        background-color $color-02
        font 17px "Cuprum"
        line-height 18px
        text-transform capitalize

        .logo-top
          width 220px
          height 47px
          box-shadow inset 0 -5px 0 $color-05
          background-color $color-04

          &:hover
            background-color $color-08

        .search
          width 270px

        .bookmarks
          width 150px

        .cart
          width 150px

        .order
          width 150px

      .middle-row
        height 153px

        .slogan
          width 196px
          height 60px
          color $color-04
          font 25px "Cuprum-Italic"
          line-height 23px

          .visually-hidden
            position absolute !important
            height 1px
            width 1px
            overflow hidden
            clip rect(1px 1px 1px 1px)
            clip rect(1px, 1px, 1px, 1px)
            white-space nowrap

        .address
          height 70px

          .phone-number
            width 270px
            height 45px
            border 3px solid $color-01

            .phone
              width 19px
              height 19px
              background-image url('../img/icon-phone.svg')

            .number
              color $color-04
              font 21px "Cuprum"
              line-height 21px

          p
            color $color-06
            font 14px "Cuprum"
            line-height 24px

        .authorization
          width 281
          height 45
          font 21px "Cuprum"
          line-height 21px

          a
            color $color-07

          a:hover


          .registration
            background-color $color-01
            color $color-07

      .navigation
        width 940px
        height 60px
        box-shadow inset 0 -5px 0 $color-02
        background-color $color-09
        font 17px"Cuprum"
        line-height 17px

        .navigation-item
          width 127px

          &:hover
            background-color $color-02
        a
          color $color-01
          text-decoration none

  .page-content

    .categories
      width 940px
      height 410px
      font 24px "Cuprum-Bold"
      line-height 30px

      .left-column
        width 620px

        .categories-item
          width 300px
          height 123px

          .click
            width 135px
            height 38px
            background-color $color-07
            opacity 0.1
            text-align center

            a
              font 14px "Cuprum"
              line-height 18px
              text-transform uppercase
              color $color-01
              text-decoration none

        .material
          background-color $color-10

          .item-icon-material
            background-image url('../img/icon-1.svg')
            width 44px
            height 65px

        .tool
          background-color $color-11

          .item-icon-tool
            background-image url('../img/icon-2.svg')
            width 75px
            height 61px

        .slider
          width 620px
          height 266px

          .slider-item

            h3
              color $color-01
              font 36px "Cuprum-Bold"
              line-height 36px
              text-transform uppercase

            p
              color $color-01
              font 18px "Cuprum"
              line-height 24px

            .btn
              width 195px
              height 38px
              background-color $color-04

              a
                color $color-01
                font 14px "Cuprum"
                line-height 18px
                text-transform uppercase
                text-decoration none

          .perf
            width 620px
            height 266px
            background-image url('../img/perf.jpg')

          .drill
            width 620px
            height 266px
            background-image url('../img/drill.jpg')

          .controls

            .dot
              width 10px
              height 10px
              border-radius 50%

          .prev
            background-image url('../img/icon-left.svg')
            width 22px
            height 40px
          .next
            background-image url('../img/icon-right.svg')
            width 22px
            height 40px

      .right-column
        width 300px

        .categories-item
          height 123px

          .click
            width 135px
            height 38px
            background-color $color-07
            opacity 0.1
            text-align center

            a
              font 14px "Cuprum"
              line-height 18px
              text-transform uppercase
              color $color-01
              text-decoration none

        .technic
          background-color $color-12

          .item-icon-technic
            background-image url('../img/icon-3.svg')
            width 78px
            height 62px

        .sale
          background-color $color-13

          .item-icon-sale
            background-image url('../img/icon-4.svg')
            width 59px
            height 72px

        .delivery
          background-color $color-14

          .item-icon-delivery
            background-image url('../img/icon-5.svg')
            width 78px
            height 63px

    .popular

      .popular-header
        width 940px
        height 89px
        background-color $color-15

        h3
          color $color-06
          font 30px "Cuprum"
          line-height 30px
          text-transform uppercase

        .btn
          width 253px
          height 38px
          background-color $color-04

          a
            font 14px "Cuprum"
            line-height 18px
            color $color-01
            text-transform uppercase
            text-decoration none

      .goods

        .goods-item

          .title
            width 155px
            height 33px
            color $color-07
            font 18px "PT-sans-Bold"
            line-height 20px
          .old-price
            width 67px
            height 12px
            color $color-16
            font 17px "PT-sans-Bold"
            line-height 18px
            text-transform uppercase
          .price
            width 65px
            height 12px
            color $color-01
            font 17px "PT-sans-Bold"
            line-height 18px
            text-transform uppercase
            background-image url('../img/btn_copy_14.svg')
