.footer-nav-item
  padding 25px 30px 13px

.footer-nav-item:first-child
  padding-left 0

.footer-nav-item:last-child
  padding-right 0

.footer-middle-row
  color $color-03
  margin 32px 0 53px

.footer-address
  display inline-flex
