  p
    font-size 30px
    line-height 30px
  button
    text-transform uppercase

.order-buy
  background-color $color-35

.icon-mark
  background url('../img/icon-mark.svg')
  width 66px
  height 66px

.close
  background url('../img/icon-close.svg')
  width 21px
  height 21px

