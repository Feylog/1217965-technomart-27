.instagram
  background url('../img/icon-insta.svg') no-repeat center
  width 21px
  height 21px

.social-item
  width 42px
  height 42px
  border-radius 50%
  margin-right 3px
  background-color $color-20
  &:hover, &:active
    background-color $color-04
  a
    display inline-block
    vertical-align top
    width 100%
    height 100%

