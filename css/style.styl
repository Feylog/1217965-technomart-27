html
  box-sizing border-box

*, *::before, *::after
  box-sizing inherit

@font-face
  font-family "Cuprum"
  src url('../fonts/web/cuprum.woff2') format('woff2'),
      url('../fonts/web/cuprum.woff') format('woff')
  font-style normal
  font-weight 400

@font-face
  font-family "Cuprum-Italic"
  src url('../fonts/web/cuprumitalic.woff2') format(woff2),
      url('../fonts/web/cuprumitalic.woff') format(woff)
  font-style italic
  font-weight 400

@font-face
  font-family "Cuprum-Bold"
  src url('../fonts/web/cuprumbold.woff2') format('woff2'),
      url('../fonts/web/cuprumbold.woff') format('woff')
  font-style normal
  font-weight 700

@font-face
  font-family "pt-sans-bold"
  src url('../fonts/web/ptsansbold.woff2') format('woff2'),
      url('../fonts/web/ptsansbold.woff') format('woff')
  font-style normal
  font-weight 700

@font-face
  font-family "pt-sans"
  src url('../fonts/web/ptsans.woff2') format('woff2'),
      url('../fonts/web/ptsans.woff') format('woff')
  font-style normal
  font-weight 400

.page
  $color-01
  font 14px "Cuprum"
  line-height 18px

.page, p, h1, h2, h3
  margin 0 auto

.container
  width 960px
  margin 0 auto
  padding 0 10px

.visually-hidden
  position absolute
  height 1px
  width 1px
  overflow hidden
  clip rect(1px 1px 1px 1px)
  clip rect(1px, 1px, 1px, 1px)
  white-space nowrap

.btn
  background-color $color-04
  text-transform uppercase
  text-decoration none
  &:hover
    background-color $color-08
  &:active
    background-color $color-21

.page-header
  background $color-03
  padding-bottom 60px

.top-row
  background $color-02
  font-size 17px
  text-transform capitalize
  .container
    display flex

.logo-top
  position absolute
  box-shadow inset 0 -5px 0 $color-05
  background-color $color-04
  &:hover
    background-color $color-08
  &:active
    background-color $color-21
  img
    padding 11px 55px
    height 47px

a
  color $color-01
  text-decoration none

.search
  margin-left 270px
  input
    width 100%
    background inherit
    color $color-01
  width 270px
  &:hover
    background-color $color-20

.search-icon
  background url('../img/icon-search.svg')
  width 17px
  height 17px
  &:hover
    fill $color-01

.bookmarks, .cart
  display flex
  padding 14px 0 13px 17px
  text-align center
  width 150px
  color $color-01
  &:hover
    background-color $color-20
  &:active
    background-color $color-22
    opacity .6
  span
    margin-left 5px

.bookmark-icon
  margin-right 13px
  width 14px
  height 16px
  background url('../img/icon-bookmark.svg')
  opacity .3
  &:hover
    opacity 1
  &:active
    opacity .5

.cart-icon
  margin-right 17px
  width 15px
  height 15px
  background url('../img/icon-cart.svg')
  opacity .3
  &:hover
    opacity 1
  &:active
    opacity .5

.order
  padding-top 14px
  text-align center
  width 150px
  background-color $color-25
  &:hover
    background-color $color-23
  &:active
    background-color $color-24

.middle-row
  padding 41px 0 44px

.slogan, .address, .authorization
  display inline-block
  vertical-align top

.slogan
  width 196px
  color $color-04
  font 16px "Cuprum-Italic"
  line-height 23px
  margin 8px 71px 0 44px

.address
  p
    color $color-06
    line-height 24px
    margin 0 10px

.phone-number
  border 3px solid $color-01
  padding 13px 52px 11px 15px

.phone
  display inline-block
  vertical-align top
  margin-right 40px
  background-image url('../img/icon-phone.svg')
  width 19px
  height 19px

.number
  display inline-block
  vertical-align top
  color $color-04
  line-height 21px
  font-size 21px

.authorization
  font 21px "Cuprum"
  line-height 21px
  margin 14px 0 0 69px
  a
    color $color-07
    background-color $color-01
    &:hover
      color $color-04
    &:active
      opacity 0.3
      color $color-07

.enter
  margin-right 10px
  padding 14px 27px 14px 14px
  path
    &:hover
      fill $color-06

.registration
  padding 14px 25px 14px

.customer, .logout
  path
    &:hover
      fill $color-06

/* catalog style start */

.personal-item:first-child
    list-style none

.personal-item
  a
    color $color-06
    font-size 16px
    text-decoration underline
    &:hover
      color $color-04
    &:active
      opacity 0.3
      color $color-06

/* catalog style end */

.navigation
  box-shadow inset 0 -5px 0 $color-02
  background-color $color-06
  font-size 17px
  line-height 17px
  a
    color $color-01
    text-decoration none

.navigation-list
  display flex
  padding-left 0
  margin 0

.navigation-item
  flex-grow 1
  text-align center
  list-style none
  &:hover
    background-color $color-02
  &:active
    background-color $color-26
  padding 22px 30px

.categories
  margin-top 59px
  .container
    display flex

.left-column
  .categories-item
    margin-right 18px

.categories-item
  width 300px
  margin 0 0 20px 0
  padding 26px 0 22px 23px
  h3
    color $color-01
    font 24px "Cuprum-Bold"
    line-height 21px
    text-transform capitalize
    margin-bottom 16px

.material, .tool
  display inline-block
  vertical-align top

.categories-item-link
  width 135px
  background-color $color-39
  padding 14px 0
  text-align center
  text-transform uppercase
  text-decoration none
  line-height 10px
  &:hover
    background-color $color-40
  &:active
    background-color $color-41

.material
  background url('../img/icon-1.svg') no-repeat $color-10

.tool
  background url('../img/icon-2.svg') no-repeat $color-11

.technic
  background url('../img/icon-3.svg') no-repeat $color-12

.sale
  background url('../img/icon-4.svg') no-repeat $color-13

.delivery
  background url('../img/icon-5.svg') no-repeat $color-14

.slider
  width 620px

.slider-item
  h3
    color $color-01
    font 36px "Cuprum-Bold"
    line-height 36px
    text-transform uppercase
  p
    font-size 18px
    line-height 24px
    color $color-01

.perf
  background url('../img/perf.jpg') no-repeat

.drill
  background url('../img/drill.jpg') no-repeat

.prev
  background-image url('../img/icon-left.svg')
  width 22px
  height 40px

.next
  background-image url('../img/icon-right.svg')
  width 22px
  height 40px

/* catalog styles start */

.breadcrumbs-item
  list-style none
  a
    font 13px "pt-sans"
    color $color-07
    text-transform uppercase

.home
  background url('../img/icon-home.svg') no-repeat
  width 14px
  height 12px

  a
    display inline-block
    vertical-align top
    width 100%
    height 100%

.content-title
    background-color $color-32
    color $color-06
    font-size 30px
    line-height 30px
    text-transform uppercase

.aside
  font 17px "pt-sans-bold"
  line-height 30px
  text-transform uppercase
  button
    font 13px "pt-sans"
    border 1px solid $color-30
    background-color $color-01

.choose-filter-0
  border none

.choose-filter
  border none
  border-bottom 1px solid

.filter
  font 13px "pt-sans"
  background-color $color-33

.choose-price
  font 17px "pt-sans"
  input
    background-color $color-33

.choose-filter
  label
    font 15px "pt-sans"
    line-height 20px

.sort
  background-color $color-33
  font 13px "pt-sans"
  text-transform uppercase

.sort-list, .arrows
  list-style none
  a
    display inline-block
    vertical-align top
    opacity .3
    color $color-07
    font 13px "pt-sans"
    text-decoration underline $color-04
    &:hover
      opacity 1
    &:active
      color $color-04
      text-decoration none
  .active
    opacity 1
    color $color-04
    text-decoration none
    path
      fill $color-04

.arrow
  path
    &:hover
      opacity 1
    &:active
      opacity 1
      fill $color-04

/* catalog styles end */

.products
  margin-top 33px

.popular-header
  background-color $color-15
  margin-bottom 20px
  .popular-title
    margin 0 auto
    padding 33px 363px 0 35px
    color $color-06
    font-size 30px
    line-height 30px
    text-transform uppercase
    display inline-block
    vertical-align top
  .btn
    margin 25px 24px 26px 0
    padding 14px 55px
    display inline-block
  .second-title
    padding 33px 266px 30px 30px
  .second-btn
    padding 13px 69px

.goods
  display flex
  margin-bottom 20px

.goods-item
  display flex
  flex-direction column
  margin 0 auto
  font 17px "pt-sans-bold"
  line-height 18px
  &:hover
    box-shadow 0 10px 25px $color-27
  &:hover > .hidden
    display block
  .title, .old-price, .price
    margin 0 auto
  .title
    color $color-07
    font-size 18px
    line-height 20px
    text-align center
    padding 12px 31px 18px
  .old-price
    color $color-16
    text-transform uppercase
  .price
    color $color-01
    text-transform uppercase
    background url('../img/btn_copy_14.svg') no-repeat
    padding 11px 40px 13px 36px
    margin 13px 36px 21px 43px
  .price:nth-child(4n)
    margin-top 31px

.hidden
  display none
  font 14px "Cuprum"
  line-height 18px
  text-transform uppercase
  a
    box-shadow inset 0 -3px 0 $color-28
    background-color $color-25
    &:hover
      background-color $color-23
    &:active
      background-color $color-24
  button
    text-transform uppercase
    border 3px solid $color-25
    &:hover
      border 3px solid $color-06
    &:active
      border 3px solid $color-06
      opacity 0.3

.manufacturers
  padding-left 0
  display flex
  flex-wrap wrap

.manufacturers-item
  width 220px
  list-style none
  &:hover
    box-shadow 0 10px 25px $color-27
  &:active
    box-shadow 0 4px 10px $color-27
  a
    &:active
      opacity 0.3
  .item-image
    display block
    margin 0 auto
  .bosch
    padding 53px 47px
  .makita
    padding 50px 48px
  .dewalt
    padding 48px 37px
  .interskol
    padding 21px 10px
  .hitachi
    padding 58px 25px
  .lg
    padding 35px 50px
  .aeg
    padding 23px 34px
  .metabo
    padding 34px 8px

.manufacturers-item:not(:nth-child(4n))
  margin-right 20px

.service
  background-color $color-17
  font 14px "pt-sans"
  line-height 24px

.service-title
  width 554px
  padding-top 68px
  margin-bottom 28px
  h3
    margin 0 auto 35px
    font 30px "Cuprum"
    line-height 30px
    text-transform uppercase

.service-wrapper
  display inline-flex

.service-tab-nav
  padding 47px 0
  list-style none
  margin 0 80px 0 0
  width 240px
  border-right 10px solid $color-42
  li
    box-shadow 0 1px 0 $color-02, inset 0 1px 0 $color-09
    background-color $color-06
    &:hover
      box-shadow 0 1px 0 $color-02, inset 0 1px 0 $color-09
      background-color $color-02
    &:active
      box-shadow 0 1px 0 $color-01, inset 0 1px 0 $color-01
      background-color $color-01
  a
    &:active
      color $color-06
  .service-tab-item
    padding 21px 0 20px 22px
    font 21px "Cuprum-Bold"
    line-height 30px

.service-tab-content
  padding-top 48px
  h3
    font 36px "Cuprum"
    line-height 36px
    text-transform uppercase
    margin-bottom 33px

.text-delivery, .text-guarantee, .text-credit
  font-size 13px
.text-delivery
  width 275px
.text-guarantee
  width 379px
.text-credit
  width 279px

.service-tab-delivery
  background url('../img/Layer_131.png') no-repeat
  width 468px
  height 261px
  margin-top 21px

.service-tab-guarantee
  background url('../img/Layer_130.png') no-repeat
  width 389px
  height 283px

.service-tab-credit
  background url('../img/Layer_119.png') no-repeat
  width 465px
  height 285px

.about
  margin 82px 0 86px
  h2
    font-size 30px
    line-height 30px
    text-transform uppercase
    margin 0 0 35px
  .text
    font 13px "pt-sans"
    line-height 24px
    margin-bottom 35px
    width 519px
  .text:nth-child(3)
    margin-bottom 28px
  .container
    display flex

.company
  display flex
  flex-direction column
  width 520px
  margin-right 120px
  .btn
    padding 14px 40px 12px
    margin-top 13px
    width 220px

.partners
  list-style none
  font-size 18px
  line-height 20px
  margin 0
  padding-left 0
  position relative
  .partner
    margin-bottom 17px
  .partner:before
    content ""
    position absolute
    left 0
    width 25px
    height 2px
    background-color $color-04

.contacts
  display flex
  flex-direction column
  .text
    width 179px
    margin 0 0 35px
  .btn
    padding 14px 59px 12px 63px
    margin-top 40px
    width 300px

/* catalog styles start */

.pager
  font 13px "pt-sans"
  line-height 18px
  color $color-01

.pager-list
  list-style none

.pager-item
  border 1px solid $color-30
  background-color $color-01
  a
    font 13px "PT Sans"
    color $color-07
    text-transform uppercase
  &:hover
    border 1px solid $color-31
  &:active
    border 1px solid $color-04
  .current
    background-color $color-04
    color $color-01

.about-puncher
  background-color $color-29
  h3
    font-size 30px
    line-height 30px
    text-transform uppercase
  p
    font 13px "pt-sans"
    line-height 24px

/* catalog styles end */

.page-footer
  background-color $color-06
  font-size 18px
  line-height 24px

.logo-bottom
  box-shadow inset 0 -5px 0 $color-05
  background-color $color-04
  width 220px
